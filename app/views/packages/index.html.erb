<p id="notice"><%= notice %></p>

<h1>Packages</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Received</th>
      <th>Perishable</th>
      <th>Student ID</th>
      <th>First email</th>
      <th>Second email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.received %></td>
        <td><%= package.perishable %></td>
        <td><%= package.student_id %></td>
        <td><%= package.first_email %></td>
        <td><%= package.second_email %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Package', new_package_path %>
