<% content_for :title do %>
  Check out package
<% end %>


<% content_for :body do %>
  <input type="text" name="bannerID" class='search-box' placeholder='Enter BannerID' v-model='bannerID'>
  <input type="submit" value="Search" class='btn' v-on:click='findStudent'>

  <div>
    <table class='table'>
      <h4 v-if='student != null'>There are {{ packages.length }} packages available for {{ student.pname }}</h4>
      <tr v-if='packages.length > 0'>
        <th>For</th>
        <th>Package ID</th>
      </tr>
      <tr v-for="package in packages">
        <td>{{ student.pname }}</td>
        <td>{{ package.id }}</td>
        <td><button class='btn btn-primary' @click='checkoutPackage(package)'>Checkout Package</button></td>
      </tr>
    </table>
  </div>

  <%= link_to 'Back', root_path %>
  <%= javascript_include_tag 'package_checkout' %>
<% end %>